{% block body %}

        <div class="row text-center" style="margin-top: 30px">
            <div class="col-12 justify-content-center">
                <div class="card"><div class="card-header">  <h1>Boites de receptions</h1></div>
                    <div class="card-body">
                        <p>Total Courrier: {{ app.user.received|length }} </p>
                        <table class="table table-striped table-bordered table_data">
                            <thead>
                            <tr>
                                <th>De</th>
                                <th>email</th>
                                <th>Nom du courrier</th>
                                <th>Status</th>
                                <th>Courrier</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for courrier in app.user.received %}
                            <tr>
                                <td>{{ courrier.sender.Nom }}</td>
                                <td>{{ courrier.sender.email }}</td>
                                <td>{{ courrier.nomC }}</td>
                                <td>{{ courrier.status }}</td>
                                <td>{{ courrier.fichier }}</td>
                                <td>{{ courrier.createdAt|date}}</td>

                                <td>
                                    <a href="{{ path("excel_show", {fichier: courrier.fichier}) }}" class="btn btn-info">Voir</a>
                                    <a href="{{asset('uploads/'~courrier.fichier)}}" class="btn btn-dark">Telecharger</a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="10">Aucun courrier reçus</td>
                            </tr>

                            {% endfor %}
                            </tbody>
                        </table>


                    </div>
                </div>

            </div>

        </div>
                </div>


            </div>
